@COM_NAME91
LOCALS:0 = ピアシング

RESULTS:0 = %LOCALS:0%する
RESULTS:1 = %LOCALS:0%させられる
RESULTS:2 = %LOCALS:0%させる
RESULTS:3 = %LOCALS:0%される
RESULTS:4 = %LOCALS:0%させる
RESULTS:5 = %LOCALS:0%見せつけ

;-------------------------------------------------
;選択可否判定
;-------------------------------------------------
@COM_ABLE91
;共通部分
CALL COM_ABLE_COMMON(91)
SIF RESULT == 0
	RETURN 0
;プレイヤーは最大で1人まで
SIF MPLY_NUM <= 0 || MPLY_NUM > 1
	RETURN 0
;ターゲットは最大で1人まで
SIF MTAR_NUM <= 0 || MTAR_NUM > 1
	RETURN 0
;外す処理があるので、ピアス無しでもokに
;SIF ITEM:ピアス <= 0
;	RETURN 0
;プレイヤーが行動不能なら不可
SIF !IS_PLAYABLE(MPLY:0)
	RETURN 0
;プレイヤーが拘束中なら不可
SIF IS_BIND(MPLY:0)
	RETURN 0
;プレイヤーが顔面騎乗されているなら不可
SIF IS_RIDDEN(MPLY:0)
	RETURN 0
;プレイヤーとターゲットが挿入されているなら不可
SIF IS_INSERT_SINGLE(MPLY:0, "全") || IS_INSERT_SINGLE(MTAR:0, "全")
	RETURN 0
RETURN 1

;-------------------------------------------------
;メイン処理
;-------------------------------------------------
@COM91
;実行判定
CALL COM_ORDER_COMMON
SIF RESULT == 0
	RETURN 0

PRINTFORML %ANAME(MPLY:0)%は%ANAME(MTAR:0)%におしゃれさせてやることにした……
PRINTFORML
FOR LOCAL, 0, ピアス_最大ビット + 1
	IF IS_PIERCED(MTAR:0, LOCAL)
		PRINTFORML [{LOCAL:0}] %GET_PIERCE_NAME(LOCAL:0)%のピアスを外す
	ELSEIF ITEM:ピアス > 0
		IF IS_HOLED(MTAR:0, LOCAL)
			SIF CAN_PIERCE(MTAR:0, LOCAL)
				PRINTFORML [{LOCAL:0}] %GET_PIERCE_NAME(LOCAL:0)%にピアスをつける
		ELSE
			SIF CAN_PIERCE(MTAR:0, LOCAL)
				PRINTFORML [{LOCAL:0}] %GET_PIERCE_NAME(LOCAL:0)%にピアス穴を開け、ピアスをつける
		ENDIF
	ELSE
		SETCOLOR カラー_選択不可
		PRINTPLAINFORM [{LOCAL:0}] %GET_PIERCE_NAME(LOCAL:0)%につけるためのピアスがない
		PRINTL
		RESETCOLOR
	ENDIF
NEXT
PRINTFORML [99] 戻る
$INPUT_LOOP
INPUT
IF RESULT == 99
	PRINTFORML やはりやめておいた
	RETURN 0
ELSEIF IS_PIERCED(MTAR:0, RESULT)
	CALL REMOVE_PIERCE(MTAR:0, RESULT)
	;●プレイヤーについて判定
	DOWNBASE:(MPLY:0):体力 += 70
	SOURCE:(MPLY:0):嗜虐 = 70
	SOURCE:(MPLY:0):逸脱 = 50
	SOURCE:(MPLY:0):接触 = 30
	;主導権に応じた優越・受動のソース追加
	CALL ADD_SOURCE_INITIATIVE_U(MPLY:0, 100, 30)
	DOWNBASE:(MTAR:0):体力 += 50
	;●ターゲットについて判定
	SOURCE:(MTAR:0):苦痛 = 50
	SOURCE:(MTAR:0):露出 = 50
	SOURCE:(MTAR:0):逸脱 = 50
	SOURCE:(MTAR:0):接触 = 30
	;主導権に応じた優越・受動のソース追加
	CALL ADD_SOURCE_INITIATIVE_U(MTAR:0, 20, 70)
ELSEIF CAN_PIERCE(MTAR:0, RESULT) && ITEM:ピアス > 0
	ITEM:ピアス --
	CALL SET_PIERCE(MTAR:0, RESULT)
	;●プレイヤーについて判定
	DOWNBASE:(MPLY:0):体力 += 100
	SOURCE:(MPLY:0):嗜虐 = 150
	SOURCE:(MPLY:0):逸脱 = 50
	SOURCE:(MPLY:0):接触 = 30
	;主導権に応じた優越・受動のソース追加
	CALL ADD_SOURCE_INITIATIVE_U(MPLY:0, 160, 60)
	DOWNBASE:(MTAR:0):体力 += 500
	;●ターゲットについて判定
	SOURCE:(MTAR:0):苦痛 = 500
	SOURCE:(MTAR:0):露出 = 50
	SOURCE:(MTAR:0):逸脱 = 150
	SOURCE:(MTAR:0):接触 = 30
	;主導権に応じた優越・受動のソース追加
	CALL ADD_SOURCE_INITIATIVE_U(MTAR:0, 50, 150)
ELSE
	GOTO INPUT_LOOP
ENDIF

;主導度変化基準値
TFLAG:49 = 5

