					CALL RELEASE_EQUIP(LOCAL:0, 1, 0)
					LOCAL:6 = 1
					LOCAL:5 --
					LOCAL:0 --
					BREAK
				ENDIF
			NEXT
			IF !LOCAL:6
				FOR LOCAL:1, 0, MEQUIP_TARGET_NUM:(LOCAL:0)
					IF MEQUIP_TARGET:(LOCAL:0):(LOCAL:1) == ARG:0
						CALL RELEASE_EQUIP(LOCAL:0, 1, 0)
						LOCAL:5 --
						LOCAL:0 --
						BREAK
					ENDIF
				NEXT
			ENDIF
		ENDIF
	NEXT
